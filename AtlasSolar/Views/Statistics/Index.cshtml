@model IEnumerable<AtlasSolar.Models.Statistic>

@{
    ViewBag.Title = AtlasSolar.Resources.Common.Statistics;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@AtlasSolar.Resources.Common.Statistics</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MeteoDataSource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MeteoDataPeriodicity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MeteoDataTypesCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MeteoDataSource.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MeteoDataPeriodicity.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MeteoDataTypesCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCount)
        </td>
        <td>
            @Html.ActionLink(AtlasSolar.Resources.Common.Details, "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
